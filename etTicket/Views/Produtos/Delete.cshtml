@model Produtos

@{
    ViewData["Title"] = "Deletar produto";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Deletar produto @Model.NomeProduto</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" readonly />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeProduto" class="control-label"></label>
                    <input asp-for="NomeProduto" class="form-control" readonly />
                    <span asp-validation-for="NomeProduto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descrição" class="control-label"></label>
                    <input asp-for="Descrição" class="form-control" readonly />
                    <span asp-validation-for="Descrição" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirmar" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Ver todos</a>
                </div>
            </div>
        </div>
    </div>
</div>