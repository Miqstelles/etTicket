@inject UserManager<IdentityUser> UserManager;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pinegas</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <globalization culture="pt-BR" uiCulture="pt-BR" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background: rgb(34,193,195); background: linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(247,253,45,1) 100%);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Produtos" asp-action="Index">Pinegas</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" asp-controller="Produtos" asp-action="Index"><i class="badge-info  bi-cart"></i>Produtos</a>
                        </li>
                    </ul>

                    <form class="form-inline my-2 my-lg-0" asp-controller="Produtos" asp-action="Filter" style="padding-right: 25px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Procure por um produto...">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>
                    <partial name="_Identity.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
    {
        <footer style="background: rgb(34,193,195); background: linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(247,253,45,1) 100%); width: 100%; height: 350px; ">
            <!--INICIO FORM-->
            <div class="container" style="padding-top:50px;">
                <h4 style="text-align:center;">Nos envie uma sugestão!</h4>
                <form action="https://api.staticforms.xyz/submit" method="post" class="row g-3 needs-validation" novalidate>
                    <!--Chave de acesso API-->
                    <input type="hidden" name="accessKey" value="e9a16d33-922a-4c46-afa0-b70876c47b6e">
                    <input type="hidden" name="redirectTo" value="file:///C:/Users/Miqu%C3%A9ias/OneDrive/%C3%81rea%20de%20Trabalho/SENAI/ExerciciosJS0804/html/form.htm">
                    <!-- Optional -->
                    <div class="col-md-4">
                        <label for="validationCustom01" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="validationCustom01" name="$nome" required>
                        <div class="valid-feedback">
                            Digite o nome
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="validationCustom02" class="form-label">Sobrenome</label>
                        <input type="text" class="form-control" id="validationCustom02" name="$nome" required>
                        <div class="valid-feedback">
                            Parece ok!
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="validationCustomUsername" class="form-label">Usuario</label>
                        <div class="input-group has-validation">

                            <input type="text" class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" name="$usuario" required>
                            <div class="invalid-feedback">
                                Insira um nome!
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label for="validationCustom03" class="form-label">Cidade</label>
                        <input type="text" class="form-control" id="validationCustom03" name="$cidade" required>
                        <div class="invalid-feedback">
                            Insira uma cidade valida
                        </div>
                    </div>
                    <div class="col-md-3" style="padding-top:40px;">
                        <label for="validationCustom04" class="form-label">UF</label>
                        <select class="form-select" id="validationCustom04" name="$uf" required>
                            <option selected disabled value="">Choose...</option>
                            <option>SP</option>
                            <option>RJ</option>
                            <option>MG</option>
                        </select>
                        <div class="invalid-feedback">
                            Insira um estado valido
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="validationCustom05" class="form-label">CEP</label>
                        <input type="text" class="form-control" id="validationCustom05" name="$cep" required>
                        <div class="invalid-feedback">
                            Insira um CEP valido
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" name="$termo" required>
                            <label class="form-check-label" for="invalidCheck">
                                Concordar com os termos e condições!
                            </label>
                            <div class="invalid-feedback">
                                Você precisa concordar com os termos e condições antes de enviar.
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary" type="submit" asp-controller="Produtos" asp-action="Index">Enviar</button>
                    </div>
                </form>
            </div>
            <!--FIM FORM-->
        </footer>
    }
</body>

</html>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script src="~/js/site.js"></script>
